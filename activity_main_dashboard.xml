<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".main_dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="#99FDD835">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalamt"
            android:text="Total Expense"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="2dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t1"
            android:textAlignment="center"
            android:text="000.00"
            android:textSize="25dp"
            android:textColor="@color/black">

        </TextView>



    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:rowCount="2"
        android:paddingTop="100dp"
        android:paddingBottom="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:columnCount="2">


        <TextView
            android:id="@+id/g1"
            android:layout_width="99dp"
            android:layout_height="5dp"
            android:layout_marginRight="25dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5sp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/add_expense"
            android:text="ADD EXPENSE"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:paddingTop="130dp"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/g2"
            android:layout_width="92dp"
            android:layout_height="5dp"
            android:layout_marginBottom="30dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textColor="@color/black"
            android:layout_margin="5sp"
            android:background="@drawable/view_report4"
            android:text="VIEW REPORT"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="130dp"/>

        <TextView
            android:id="@+id/g3"
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:layout_margin="5sp"
            android:background="@drawable/checkitem2"
            android:text="CHECK"
            android:textSize="20dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="130dp"
            />

        <TextView
            android:id="@+id/g4"
            android:layout_width="19dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/aboutus2"
            android:layout_margin="5sp"
            android:text="ABOUT US"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="130dp"

            />


    </GridLayout>



</LinearLayout>