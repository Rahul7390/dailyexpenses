<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:padding="1dp"
    tools:context=".MainActivity8">


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg1"
        android:text=" Forget Password"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#99FDD835"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"><!--use for determine the size  and softness of the shadow so as to realistically depict the depth-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg"
                    android:drawablePadding="10dp"
                    android:text=" Enter your username"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:id="@+id/emailt"
                    android:layout_marginTop="8dp"
                    app:helperText="Mandatory*"
                    app:startIconDrawable="@drawable/ic_baseline_account_circle_24"


                    app:helperTextTextColor="@color/teal_700"

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter your User"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/edit10"
                    android:background="@drawable/bg4"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg1"
                    android:text="RESET PASSWORD"
                    android:textSize="20dp"
                    android:textColor="#DC0707"
                    app:iconTint="@color/white"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/r"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>