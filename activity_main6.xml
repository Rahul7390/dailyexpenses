<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="1dp"
    tools:context=".MainActivity6">
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/viewReport"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg1"
        android:text="      View Report"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/trepoort"
        android:layout_width="250dp"
        android:layout_marginStart="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewReport"
        android:layout_marginTop="40dp"
        android:text="000.00"
        android:background="@drawable/bg2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp">

    </TextView>

    <Button
        android:id="@+id/btoday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewReport"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="140dp"
        android:text="Total Expense By Today"
        android:background="@drawable/bg1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bweek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewReport"
        android:layout_centerInParent="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="240dp"
        android:text="Total Expense By Week"
        android:background="@drawable/bg1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bmonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewReport"
        android:layout_marginStart="90dp"
        android:background="@drawable/bg1"
        android:textSize="20dp"
        android:layout_marginTop="340dp"
        android:text="Total Expense By Month"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="@color/black"

        android:textStyle="bold" />

    <Button
        android:id="@+id/bdaterange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewReport"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:background="@drawable/bg1"
        android:layout_marginTop="440dp"
        android:text="Total Expense By DateRange"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textStyle="bold">

    </Button>
</RelativeLayout>

