<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:padding="1dp"
    tools:context=".MainActivity5">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:background="@drawable/bg2"
        android:id="@+id/hi"
        android:text="    Add Expense"
        android:layout_marginTop="53dp"
        android:textColor="@color/black"
        android:textSize="30dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailt"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="276dp"
        android:layout_height="75dp"
        android:layout_below="@+id/hi"
        android:layout_marginStart="65dp"
        android:layout_marginTop="60dp"
        app:endIconMode="clear_text"
        app:helperText="Mandatory*"
        app:helperTextTextColor="@color/teal_700"
        app:startIconDrawable="@drawable/ic_baseline_money_24">

        <EditText
            android:id="@+id/expense"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/bg4"
            android:hint="Enter your Expense"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#DD0404"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/bg2"
            android:text="Today:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="500dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />





    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense"
        android:layout_centerInParent="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="40dp"
        android:popupBackground="@drawable/bg1"
        android:textColorHint="#DD0404"
        android:textStyle="bold"
        tools:ignore="NotSibling"></Spinner>


  <!-- <EditText
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_centerInParent="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/bg2"
        android:hint="Select your Date"
        android:inputType="datetime"
        android:textAlignment="center"
        android:textColorHint="#DD0404"
        android:textStyle="bold"/>-->



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/button11"
        android:background="@drawable/bg1"
        android:textColor="#E91E63"
        android:layout_below="@id/spinner"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginVertical="40dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button11"
        app:fabSize="normal"
        android:layout_alignLeft="@id/button11"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="1dp"
        android:scrollbarSize="10dp"
        android:tint="@color/purple_700"
        app:fabCustomSize="50dp"
        app:srcCompat="@drawable/ic_baseline_chat_24" />




</RelativeLayout>

